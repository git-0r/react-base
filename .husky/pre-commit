npm run pc ||
(
    echo 'Prettier Check Failed. Run npm format, add changes and try commit again.';
    false;
)

echo 'ğŸ—ï¸ğŸ‘· Check ESLint Standards'
npm run lint ||
(
     echo 'ESLint Check Failed. Make the required changes listed above, add changes and try to commit again.'
     false; 
)

echo 'ğŸ—ï¸ğŸ‘· Check tsconfig standards'
npm run tc ||
(
    echo 'Failed Type check.'
    false;
)
echo 'Code looks good to me.'

echo 'ğŸ—ï¸ğŸ‘· Adding any changes in files to git'
